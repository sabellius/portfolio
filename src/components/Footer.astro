---
import { Icon } from 'astro-icon/components';
---

<footer class="bg-dark-100 text-white py-2">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-400">
        Made By Saveliy Shiryaev {new Date().getFullYear()} Â©
      </p>

      <div class="flex gap-6">
        <a
          href="https://github.com/sabellius"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-gray-400 hover:bg-primary hover:text-dark-100 px-3 py-2 rounded-lg transition-colors"
          aria-label="GitHub">
          <Icon name="mdi:github" class="w-8 h-8 fill-current" />
          <span>GitHub</span>
        </a>
        <a
          href="https://linkedin.com/in/saveliy-shiryaev"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-gray-400 hover:bg-primary hover:text-dark-100 px-3 py-2 rounded-lg transition-colors"
          aria-label="LinkedIn">
          <Icon name="mdi:linkedin" class="w-8 h-8 fill-current" />
          <span>LinkedIn</span>
        </a>
        <a
          href="mailto:saveliy.dev@gmail.com"
          class="flex items-center gap-2 text-gray-400 hover:bg-primary hover:text-dark-100 px-3 py-2 rounded-lg transition-colors"
          aria-label="Email">
          <Icon name="mdi:email-outline" class="w-8 h-8 fill-current" />
          <span>Email</span>
        </a>
      </div>
    </div>
  </div>
</footer>
