import { Icon } from 'astro-icon/components';

const projects = [
  {
    title: 'Project One',
    description:
      'A brief description of your project, what it does, and the technologies used.',
    tags: [
      { icon: 'mdi:react', label: 'React' },
      { icon: 'mdi:nodejs', label: 'Node.js' },
      { icon: 'simple-icons:mongodb', label: 'MongoDB' },
    ],
    github: 'https://github.com/yourusername/project',
    demo: 'https://project-demo.com',
  },
  {
    title: 'Project Two',
    description:
      'A brief description of your project, what it does, and the technologies used.',
    tags: [
      { icon: 'mdi:react', label: 'React' },
      { icon: 'mdi:nodejs', label: 'Node.js' },
      { icon: 'simple-icons:mongodb', label: 'MongoDB' },
    ],
    github: 'https://github.com/yourusername/project',
    demo: 'https://project-demo.com',
  },
  {
    title: 'Project Three',
    description:
      'A brief description of your project, what it does, and the technologies used.',
    tags: [
      { icon: 'mdi:react', label: 'React' },
      { icon: 'mdi:nodejs', label: 'Node.js' },
      { icon: 'simple-icons:mongodb', label: 'MongoDB' },
    ],
    github: 'https://github.com/yourusername/project',
    demo: 'https://project-demo.com',
  },
  {
    title: 'Project Four',
    description:
      'A brief description of your project, what it does, and the technologies used.',
    tags: [
      { icon: 'mdi:react', label: 'React' },
      { icon: 'mdi:nodejs', label: 'Node.js' },
      { icon: 'simple-icons:mongodb', label: 'MongoDB' },
    ],
    github: 'https://github.com/yourusername/project',
    demo: 'https://project-demo.com',
  },
];
---

<section id="projects" class="py-20 sm:py-40 bg-dark-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-white mb-4">Projects</h2>
      <p class="text-lg text-gray-300 mb-12 max-w-2xl">
        Here are some of my recent projects that showcase my skills and
        experience
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
        {
          projects.map(project => (
            <article class="bg-card border border-dark-200 rounded-lg p-6 hover:border-primary hover:shadow-lg transition-all">
              <h3 class="text-2xl font-bold text-white mb-3">
                {project.title}
              </h3>
              <p class="text-gray-300 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map(tag => (
                  <span class="flex items-center gap-1 text-gray-400 hover:text-gray-100">
                    <Icon name={tag.icon} class="w-5 h-5 fill-current" />
                    {tag.label}
                  </span>
                ))}
              </div>
              <div class="flex gap-3">
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center -ml-3 gap-2 text-sm font-medium text-gray-400 hover:bg-primary hover:text-dark-100 px-3 py-2 rounded-lg transition-colors">
                  <Icon name="mdi:github" class="w-5 h-5 fill-current" />
                  <span>GitHub</span>
                </a>
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center -ml-3 gap-2 text-sm font-medium text-gray-400 hover:bg-primary hover:text-dark-100 px-3 py-2 rounded-lg transition-colors">
                  <Icon name="mdi:external-link" class="w-5 h-5 fill-current" />
                  <span>Live Demo</span>
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </div>
</section>
